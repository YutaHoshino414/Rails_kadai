<%= form_with(model: @tsubuyaki, local: true) do |form| %>
  <% if @tsubuyaki.errors.any? %>
  <div id="error_explanation">
    <h3><%= @tsubuyaki.errors.count %>件のエラーがあります。</h3>
    <ul>
      <% @tsubuyaki.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="tsubuyaki_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>